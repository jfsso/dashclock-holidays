<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="pref_calendar"
        android:title="@string/pref_title_holiday_calendar"
        android:defaultValue=""
        android:entries="@array/pref_holiday_calendars_titles"
        android:entryValues="@array/pref_holiday_calendars_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="pref_lang"
        android:title="@string/pref_title_language"
        android:defaultValue="en"
        android:entries="@array/pref_language_titles"
        android:entryValues="@array/pref_language_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
